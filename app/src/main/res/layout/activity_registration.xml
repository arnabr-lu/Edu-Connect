<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg2"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Registration">
<!--    561ad6465766a7fc88a1dcd9efdb55eb-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:elevation="20dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/registrationgif"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/registration_gif"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                >

                 <com.google.android.material.imageview.ShapeableImageView
                     android:id="@+id/upldImg"
                     android:layout_width="match_parent"
                     android:layout_height="70dp"
                     android:src="@drawable/add_photo"
                     />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text=":Name "
                    android:textSize="20sp"
                    android:textDirection="rtl"
                    />
                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Name..."
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text=":Number "
                    android:textSize="20sp"
                    android:textDirection="rtl"
                    />
                <EditText
                    android:id="@+id/numberInput"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Mobile Number..."
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text=":Email "
                    android:textSize="20sp"
                    android:textDirection="rtl"
                    />
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:hint="cse_2012020175@lus.ac.bd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text=":Password "
                    android:textSize="20sp"
                    android:textDirection="rtl"
                    />
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Password..."
                    />
            </LinearLayout>


            <Button
                android:id="@+id/register"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Register"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                />





        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/goToLogin"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Click for LogIn."
        />

</LinearLayout>